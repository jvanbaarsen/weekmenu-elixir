<div class="container mx-auto">
  <div class="card p-8 w-full lg:w-1/2 mx-auto">
    <%= if get_flash(@conn, :error) do %>
      <div class="px-4 py-4 bg-red-100 border-b-2 border-red-500 text-red-500 text-center font-bold -mx-8 -mt-8 mb-8"><%= get_flash(@conn, :error) %></div>
    <% end %>

    <h1 class="title">Sign in to Weekmenu</h1>
    <%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <%= label f, :email, class: "input-label" %>
          <%= email_input f, :email, class: "input-field" %>
          <%= error_tag f, :email, class: "form-errors" %>
        </div>
      </div>

      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <%= label f, :password, class: "input-label" %>
          <%= password_input f, :password, class: "input-field" %>
          <%= error_tag f, :password, class: "form-errors" %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <%= submit "Sign in", class: "btn" %>
        <%= link gettext("Create free account"), to: user_path(@conn, :new), class: "link" %>
      </div>
    <% end %>
  </div>
</div>

<h1>Add your recipe</h1>

<%= form_for @changeset, Routes.recipe_path(@conn, :create), fn f -> %>

          <%= label f, :name, class: "input-label" %>
          <%= email_input f, :name, class: "input-field" %>
          <%= error_tag f, :name, class: "form-errors" %>

        <%= submit "Create recipe", class: "btn" %>

<% end %>
